{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Director</th>
                <th>Avg Rating</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>

        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.director.director }}</td>
                <td>{{ movie.avgRating }}</td>
                <td>{% for item in movie.genre %}
                        {{ item.getGenre() }}
                    {% endfor %}</td>
                <td>
                    <a href="{{ path('movie_show', {'id': movie.id}) }}">Rate (1-5)</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
